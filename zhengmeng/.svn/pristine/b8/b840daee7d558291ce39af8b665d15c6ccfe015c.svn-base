<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhuye.zhengmeng.widget.RoundedCornerImageView
        android:id="@+id/img_observer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/touxiang_re" />

    <TextView
        android:id="@+id/observer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_observer"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/observer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/observer_name"
        android:layout_toRightOf="@+id/img_observer"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/observer_name"
        android:text="100"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pinlun_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/observer_content"
        android:layout_toRightOf="@+id/img_observer"
        android:text="2017-11-02 16:43"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/observer_content"
        android:layout_toRightOf="@+id/pinlun_time"
        android:layout_marginLeft="5dp"
        android:text="14条回复"
        android:textColor="@color/white" />
</RelativeLayout>
