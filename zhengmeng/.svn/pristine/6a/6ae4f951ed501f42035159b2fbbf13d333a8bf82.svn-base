<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y422"
        android:background="@mipmap/home_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/platform_songs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_sing"
            android:drawableLeft="@mipmap/home_music"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:text="平台歌曲"
            android:textColor="@color/white"
            android:textSize="18sp">

        </TextView>

        <View
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:background="@color/back_color">

        </View>

        <TextView
            android:id="@+id/platform_competition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/frame_game"
            android:drawableLeft="@mipmap/home_cup"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="28dp"
            android:text="平台比赛"
            android:textColor="@color/white"
            android:textSize="18sp">

        </TextView>
    </LinearLayout>

</LinearLayout>
