<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#382c30"
    tools:context="com.zhuye.zhengmeng.dynamic.DynamicDetailActivity">

    <com.zhuye.zhengmeng.widget.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y422" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y220">

                <com.zhuye.zhengmeng.widget.RoundedCornerImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/x130"
                    android:layout_height="@dimen/x130"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/y10"
                    android:src="@mipmap/touxiang_re" />


                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginTop="@dimen/y35"
                    android:layout_toRightOf="@+id/avatar"
                    android:text="张无忌"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_fans_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nickname"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/y25"
                    android:layout_toRightOf="@+id/avatar"
                    android:text="1粉丝"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/follow_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/nickname"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:text="关注"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/sign_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avatar"
                    android:text="这个家伙很辣，别吃"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论：150"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.jude.easyrecyclerview.EasyRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>
    </com.zhuye.zhengmeng.widget.MyScrollview>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/hometab_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/rb_gift"
                style="@style/DynamicRadioButtonBottomTab"
                android:drawableTop="@drawable/tab_0_back"
                android:text="礼物" />

            <RadioButton
                android:id="@+id/rb_comment"
                style="@style/DynamicRadioButtonBottomTab"
                android:checked="true"
                android:drawableTop="@drawable/tab_1_back"
                android:text="评论" />

            <RadioButton
                android:id="@+id/rb_zhuanfa"
                style="@style/DynamicRadioButtonBottomTab"
                android:drawableTop="@drawable/tab_2_back"
                android:text="转发" />


            <RadioButton
                android:id="@+id/rb_perform"
                style="@style/DynamicRadioButtonBottomTab"
                android:drawableTop="@drawable/tab_3_back"
                android:text="演唱" />


        </RadioGroup>
    </LinearLayout>

</RelativeLayout>
