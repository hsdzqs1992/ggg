<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhuye.zhengmeng.widget.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/home_recommend_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:banner_indicatorGravity="center_horizontal"
                app:banner_pageChangeDuration="1000"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointContainerBackground="#00000000"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                app:banner_pointTopBottomMargin="5dp"
                app:banner_tipTextColor="@color/white"
                app:banner_tipTextSize="15dp"
                app:banner_transitionEffect="defaultEffect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/platform_songs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_sing"
                    android:drawableLeft="@mipmap/home_music"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="28dp"
                    android:text="平台歌曲"
                    android:textColor="@color/white"
                    android:textSize="18sp">

                </TextView>

                <View
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:background="@color/back_color">

                </View>

                <TextView
                    android:id="@+id/platform_competition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/frame_game"
                    android:drawableLeft="@mipmap/home_cup"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="28dp"
                    android:text="平台比赛"
                    android:textColor="@color/white"
                    android:textSize="18sp">

                </TextView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/part_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_quanguobang"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全国榜"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_quyubang"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="郑州榜"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/part_line" />

            <!--<com.jude.easyrecyclerview.EasyRecyclerView-->
                <!--android:id="@+id/recyclerView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

        </LinearLayout>
    </com.zhuye.zhengmeng.widget.MyScrollview>
</LinearLayout>
